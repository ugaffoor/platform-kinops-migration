  "customHeadContent": "<style>\n.copyTags {\n    display: flex;\n}\n.copyTags.copyItem {\n    margin-right: 10px;\n    display: flex;\n}\n.copyTags.copyItem i.fa.fa-clipboard {\n    padding: 4px;\n}  \n#emailFooter {\n    visibility: hidden;\n}\n#copyValue {\n    float: right;\n    width: 10px;\n    height: 10px;\n    border: 0;\n}  \n</style>\n<script>\n  function copyMemberID() {\n    copyText=$(\"#copyValue\");\n    copyText.val(\"member('ID')\");\n  \tcopyText.select();\n    document.execCommand(\"copy\");\n  }\n  function copyFirstName() {\n    copyText=$(\"#copyValue\");\n    copyText.val(\"member('First Name')\");\n  \tcopyText.select();\n    document.execCommand(\"copy\");\n  }\n  function copyLastName() {\n    copyText=$(\"#copyValue\");\n    copyText.val(\"member('Last Name')\");\n  \tcopyText.select();\n    document.execCommand(\"copy\");\n  }\n  function copyEmailFooter() {\n    copyText=$(\"#copyValue\");\n    copyText.val($('#emailFooter').val());\n  \tcopyText.select();\n    document.execCommand(\"copy\");\n  }\n  function copyOptOut() {\n    copyText=$(\"#copyValue\");\n    copyText.val(\"<a href=\\\"${kappAttributes('Kinetic Email Server URL')}/opt-out?space=${spaceSlug}&id=member('ID')\\\">Opt-Out</a>\");\n  \tcopyText.select();\n    document.execCommand(\"copy\");\n  }\n</script>",
